{
  "name": "dev-portfolio",
  "version": "1.12.5",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "release": "dotenv release-it --"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.5",
    "@vercel/analytics": "^1.2.2",
    "@vercel/speed-insights": "^1.0.10",
    "mongoose": "^8.2.0",
    "next": "14.1.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^20.11.21",
    "@types/react": "^18.2.60",
    "@types/react-dom": "^18.2.19",
    "@types/react-transition-group": "^4.4.10",
    "autoprefixer": "^10.4.17",
    "dotenv-cli": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.35",
    "react-icons": "^5.0.1",
    "release-it": "^17.1.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(build): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "angular",
          "types": [
            {
              "type": "feat!",
              "section": "⚠ BREAKING CHANGES"
            },
            {
              "type": "fix!",
              "section": "⚠ BREAKING CHANGES"
            },
            {
              "type": "perf!",
              "section": "⚠ BREAKING CHANGES"
            },
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "docs",
              "section": "Documentations"
            },
            {
              "type": "style",
              "section": "Others"
            },
            {
              "type": "refactor",
              "section": "Others"
            },
            {
              "type": "deps",
              "section": "Others"
            },
            {
              "type": "config",
              "section": "Others"
            }
          ]
        }
      }
    }
  }
}
