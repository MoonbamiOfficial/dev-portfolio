{
  "git": {
    "commitMessage": "chore(build): release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "tokenRef": "DEV_PORTFOLIO_TOKEN"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# What's New",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat!",
            "section": "⚠ BREAKING CHANGES"
          },
          {
            "type": "fix!",
            "section": "⚠ BREAKING CHANGES"
          },
          {
            "type": "perf!",
            "section": "⚠ BREAKING CHANGES"
          },
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Fixes"
          },
          {
            "type": "perf",
            "section": "Performance Improvements"
          },
          {
            "type": "docs",
            "section": "Documentations"
          },
          {
            "type": "style",
            "section": "Others",
            "hidden": true
          },
          {
            "type": "refactor",
            "section": "Others",
            "hidden": true
          },
          {
            "type": "deps",
            "section": "Others",
            "hidden": true
          },
          {
            "type": "config",
            "section": "Others",
            "hidden": true
          }
        ]
      }
    }
  }
}
